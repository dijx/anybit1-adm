c_name='nextCloud-app'

echo "promoting container $c_name"
docker run -d \
--mount type=bind,source="/opt/docker/mount/nextCloud/app/var_www_html",target="/var/www/html" \
--mount type=bind,source="/opt/docker/mount/nextCloud/app/usr_local_etc",target="/usr/local/etc" \
--net nextCloud-net \
--ip 172.16.1.2 \
--restart unless-stopped \
--name $c_name nextcloud:latest \

echo 'DONE!'
sleep 3
echo "installing packages in $c_name"
docker exec -it $c_name bash -c "apt update ; apt install -y ffmpeg"
